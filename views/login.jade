extends layout

block content
    br
    br
    br
    br
    center
        h1 Please login
        form(role="form", action="/auth/login", method="post")
            .form-group
                label(for="username") Username 
                input#username.form-control(name="username", pattern='[A-Za-z]{8,}'  placeholder = 'juandelacruz', type="text", required)
            .form-group
                label(for="password") Password
                input#password.form-control(name="password", type="password", placeholder = '********' required)
            p
                a.btn.btn-link(href="/") Cancel
                button.btn.btn-default(type="submit", value="Log In") Log in
