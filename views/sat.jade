extend layout

block content
 center
  h1 Saturday Schedules
  br
  p
    
    
    if (!user)
      |  
     
      table.table
        thead
          tr
            th
            th Room/s
            th Start Time
            th End Time
            th Reserved By
        tbody
          if !sat.length
            tr
              td(colspan=4) You should add a Saturday Schedule
          else
            each sats in sat
              tr
                td
              
                td #{sats.room}
                td #{sats.stime}
                td #{sats.etime)
                td #{sats.name) 
    else
      a#add.btn.btn-default(href="/sat/add6") Add new
      table.table
        thead
          tr
            th
            th Room/s
            th Start Time
            th End Time
            th Reserved By
        tbody
          if !sat.length
            tr
              td(colspan=4) You should add a Saturday Schedule
          else
            each sats in sat
              tr
                td
              
                td
                  a(href="/sat/#{sats.id}") #{sats.room}
                td #{sats.stime}
                td #{sats.etime) 
                td #{sats.name)  