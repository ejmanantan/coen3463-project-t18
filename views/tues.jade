extend layout

block content
 center
  h1 Tuesday Schedules
  br
  p
    
    
    if (!user)
      |  
     
      table.table
        thead
          tr
            th
            th Room/s
            th Start Time
            th End Time
            th Reserved By
        tbody
          if !tues.length
            tr
              td(colspan=4) You should add a Tuesday Schedule
          else
            each tuess in tues
              tr
                td
              
                td #{tuess.room}
                td #{tuess.stime}
                td #{tuess.etime)
                td #{tuess.name)   
    else
      a#add.btn.btn-default(href="/tues/add2") Add new
      table.table
        thead
          tr
            th
            th Room/s
            th Start Time
            th End Time
            th Reserved By
        tbody
          if !tues.length
            tr
              td(colspan=4) You should add a Tuesday Schedule
          else
            each tuess in tues
              tr
                td
              
                td
                  a(href="/tues/#{tuess.id}") #{tuess.room}
                td #{tuess.stime}
                td #{tuess.etime)  
                td #{tuess.name) 