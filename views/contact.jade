			form(method='post', action='contact/send')

				.form-group
					label First Name 
					input.form-control(type = 'text', name='fname', oninvalid="this.setCustomValidity('Enter First Name')",  oninput="setCustomValidity('')",pattern ='[A-Za-z].{1,}', placeholder = 'Juan', required)
					br

					label Last Name 
					input.form-control(type = 'text', name='lname', oninvalid="this.setCustomValidity('Enter Last Name')",  oninput="setCustomValidity('')", pattern ='[A-Za-z].{1,}', placeholder = 'Dela Cruz', required)
					br

					label Student Number 
					input.form-control(type = 'text', name='sn', oninvalid="this.setCustomValidity('Enter Student Number)",  oninput="setCustomValidity('')", pattern = '[0-9A-Z-].{1,15}', placeholder = '2010-01234-MN-0' required)
					br

				.form-group
					label Email 
					input.form-control(type = 'email', name='email', oninvalid="this.setCustomValidity('Enter your email address')",  oninput="setCustomValidity('')", placeholder = 'juan.dc@gmail.com' required )

