				.form-group
					label Day 
					input.form-control(type = 'text', name='day', oninvalid="this.setCustomValidity('Enter the Day')",  oninput="setCustomValidity('')", pattern ='[A-Za-z].{1,}', placeholder = 'Monday', required)

				.form-group
					label Date 
					input.form-control(type = 'text', name='date', oninvalid="this.setCustomValidity('Enter the Date: YYYY-MM-DD')",  oninput="setCustomValidity('')", pattern = '(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))', placeholder = '2011-03-21', required)

				.form-group
					label Time 
					input.form-control(type = 'text', name='time',oninvalid="this.setCustomValidity('Enter the time')",  oninput="setCustomValidity('')", pattern = '[0-9:-].{1,}', placeholder = '7:30-10:30', required)


